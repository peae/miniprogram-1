<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">

    <view class="page__bd">
        <mp-form id="form" rules="{{rules}}" models="{{formData}}">

            <mp-cells title="表单" footer="底部说明文字底部说明文字">
                <mp-cell prop="name" title="名称" ext-class="">
                    <input bindinput="nameInputChange" data-field="name" class="weui-input" placeholder="请输入名称" />
                </mp-cell>
                <mp-cell prop="account" title="账号" ext-class="">
                    <input bindinput="accountInputChange" data-field="account" class="weui-input" placeholder="请输入账号" />

                </mp-cell>
                <mp-cell prop="password" title="密码" ext-class="">
                    <input bindinput="passwordInputChange" data-field="password" class="weui-input"
                        placeholder="请输入密码" />
                    <!-- <view slot="footer" class="weui-vcode-btn">获取验证码</view> -->
                    <button class="mini-btn" type="primary" size="mini">
                        <picker bindchange="bindDigitsCodeIndexChange" value="{{digitsCodeIndex}}"
                            range="{{digitsCodes}}">
                            <!-- <view class="weui-select">{{digitsCodes[digitsCodeIndex]}}</view> -->
                            <view class="weui-select">生成</view>
                        </picker>
                    </button>
                </mp-cell>
                <mp-cell prop="password2" title="密码2" ext-class="">
                    <input bindinput="password2InputChange" data-field="password2" class="weui-input"
                        placeholder="请输入密码" />
                    <view slot="footer" class="weui-vcode-btn">获取验证码</view>
                </mp-cell>
                <mp-cell prop="url" title="URL" ext-class="">
                    <input bindinput="urlInputChange" data-field="url" class="weui-input" placeholder="请输入链接" />
                </mp-cell>


                <view class="weui-cells__title">备注</view>
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell">
                        <view class="weui-cell__bd">
                            <textarea bindinput="noteInputChange" data-field="note" class="weui-textarea"
                                placeholder="请输入文本" style="height: 3.3em" />
                            <view class="weui-textarea-counter">0/200</view>
                        </view>
                    </view>
                </view>





        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_select">

                <view class="weui-cell__bd weui-cell__bd_in-select-before">
                    <input class="weui-input" placeholder="请输入密码" />
                </view>
                <button class="" type="primary" size="mini">
                    <picker bindchange="bindDigitsCodeIndexChange" value="{{digitsCodeIndex}}" range="{{digitsCodes}}">
                        <!-- <view class="weui-select">{{digitsCodes[digitsCodeIndex]}}</view> -->
                        <view class="weui-select">生成</view>
                    </picker>
                </button>
            </view>
        </view>

            </mp-cells>


        </mp-form>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="submitForm">确定</button>
        </view>
    </view>
</view>